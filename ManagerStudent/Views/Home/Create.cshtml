<div id="app">
    <section class="section">
        <div class="container mt-5">
            <div class="row">
                <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h4 class="text-center">Create New User</h4>
                        </div>
                        <div class="card-body">
                            <form method="POST" asp-controller="Home" asp-action="Create" class="needs-validation"
                                novalidate="" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="UserName">Email</label>
                                    <input id="UserName" type="email" class="form-control" name="UserName" tabindex="1"
                                        required autofocus required>
                                </div>
                                <div class="form-group">
                                    <label for="Password">Password</label>
                                    <input id="Password" type="password" class="form-control" name="Password" tabindex="1"
                                        required autofocus required>
                                </div>
                                <div class="form-group d-flex justify-content-between">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" value="true" name="isAdmin" id="admin"
                                            checked>
                                        <label class="form-check-label" for="admin">
                                            Admin
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" value="false" name="isAdmin" id="student">
                                        <label class="form-check-label" for="student">
                                            Student
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                                        Submit
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
